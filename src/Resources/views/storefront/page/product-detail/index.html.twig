{% sw_extends '@Storefront/storefront/page/product-detail/index.html.twig' %}

{% block page_product_detail %}
    {{ parent() }}

    {% if shopware.config.MoorlMerchantStock.config.onlyAvailability or page.product.extensions.MoorlMerchantStocks or shopware.config.MoorlMerchantStock.config.autoGenerateStocks %}
        {%  set element = {
            id: page.product.id,
            config: {
                id: { value: 'merchantStockModal' },
                initiator: { value: 'merchant-stock' },
                productId: { value: page.product.id },
                type: { value: shopware.config.MoorlMerchantStock.config.type }
            }
        } %}

        {% set modalTitle %}
            {{ page.product.translated.name }} |
            {% if shopware.config.MoorlMerchantStock.config.onlyAvailability %}
                {{ "moorl-merchant-finder.productAvailability"|trans }}
            {% else %}
                {{ "moorl-merchant-finder.choseMerchant"|trans }}
            {% endif %}
        {% endset %}

        {% sw_include '@Storefront/plugin/moorl-merchant-finder/component/selection-modal.html.twig' %}
    {% endif %}
{% endblock %}