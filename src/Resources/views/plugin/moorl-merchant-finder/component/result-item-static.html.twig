{% set displayMode = displayMode ?: 'full' %}
{% set openingHour = merchant.merchantOpeningHours.getForToday(merchant.id) %}

{% block element_moorl_merchant_finder_result_item %}
    <li style="{% block element_moorl_merchant_finder_result_item_style %}{% endblock %}" id="{{ merchant.id }}" class="list-group-item moorl-merchant-finder-result-item display-mode-{{ displayMode }}">
        {% sw_include '@Storefront/plugin/moorl-merchant-finder/component/result-item-static-main.html.twig' %}

        <div class="row form-row">
            {% block element_moorl_merchant_finder_result_tags %}
                {% if merchant.tags.count %}
                    <div class="col-6">
                        <i class="fa-fw fas fa-tags"></i> <b>{{ "moorl-merchant-finder.tags"|trans }}</b>
                        <div class="tags">
                            {% for tag in merchant.tags %}
                                <span>{{ tag.name }}</span>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            {% endblock %}

            {% block element_moorl_merchant_finder_result_categories %}
                {% if merchant.categories.count %}
                    <div class="col-6">
                        <i class="fa-fw fas fa-tshirt"></i> <b>{{ "moorl-merchant-finder.categories"|trans }}</b>
                        <div class="categories">
                            {% for category in merchant.categories %}
                                <span>{{ category.name }}</span>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            {% endblock %}
        </div>

        {% if merchant.productManufacturers.count %}
            <div class="row form-row">
                {% block element_moorl_merchant_finder_result_manufacturers %}
                    <div class="col-12">
                        <i class="fa-fw fas fa-industry"></i> <b>{{ "moorl-merchant-finder.manufacturers"|trans }}</b>
                        <div class="manufacturers">
                            {% for manufacturer in merchant.productManufacturers %}
                                {% if manufacturer.media %}
                                    <img src="{{ manufacturer.media.url }}" title="{{ manufacturer.name }}">
                                {% else %}
                                    <span>{{ manufacturer.name }}</span>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endblock %}
            </div>
        {% endif %}

        <div class="mt-2">
            {% block element_moorl_merchant_finder_result_button_merchant_url %}
                {% if merchant.merchantUrl %}
                    <a href="{{ merchant.merchantUrl }}" target="_blank" class="btn btn-sm btn-light"><i
                                class="fas fa-info-circle"></i> {{ "moorl-merchant-finder.merchantUrl"|trans }}</a>
                {% endif %}
            {% endblock %}

            {% block element_moorl_merchant_finder_result_button_shop_url %}
                {% if merchant.shopUrl %}
                    <a href="{{ merchant.shopUrl }}" target="_blank" class="btn btn-sm btn-light"><i
                                class="fas fa-shopping-cart"></i> {{ "moorl-merchant-finder.shopUrl"|trans }}</a>
                {% endif %}
            {% endblock %}

            {% block element_moorl_merchant_finder_result_button_location %}
                {# displayMode full is always with map #}
                {% if displayMode == 'full' %}
                    {% if merchant.locationLon %}
                        <a href="javascript:"
                           data-location-lat="{{ merchant.locationLat }}"
                           data-location-lon="{{ merchant.locationLon }}"
                           data-item="{{ merchant.id }}"
                           class="btn btn-sm btn-light">
                            <i class="fas fa-map-pin"></i> {{ "moorl-merchant-finder.displayOnMap"|trans }}
                        </a>
                    {% endif %}
                {% endif %}
            {% endblock %}

            {% block element_moorl_merchant_finder_result_button_cms %}
                {% if shopware.config.MoorlMerchantFinder.config.detailPage == 'popup' %}
                    <a href="javascript:" data-trigger="#merchant_finder_more"
                       data-url="{{ path('moorl.merchant-finder.merchant', {'merchantId':merchant.id}) }}"
                       class="btn btn-sm btn-light">{{ "moorl-merchant-finder.more"|trans }}</a>
                {% endif %}
            {% endblock %}
        </div>
    </li>
{% endblock %}
