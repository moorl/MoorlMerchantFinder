<div class="mt-2">
    {% block element_moorl_merchant_finder_result_button_merchant_url %}
        {% if merchant.merchantUrl %}
            <a href="{{ merchant.merchantUrl }}" target="_blank" rel="noopener" class="btn btn-sm btn-light">
                {% sw_icon 'info-circle' style {size:'sm', pack:'fas'} %}
                {{ "moorl-merchant-finder.merchantUrl"|trans }}
            </a>
        {% endif %}
    {% endblock %}

    {% block element_moorl_merchant_finder_result_button_shop_url %}
        {% if merchant.shopUrl %}
            <a href="{{ merchant.shopUrl }}" target="_blank" rel="noopener" class="btn btn-sm btn-light">
                {% sw_icon 'shopping-cart' style {size:'sm', pack:'fas'} %}
                {{ "moorl-merchant-finder.shopUrl"|trans }}
            </a>
        {% endif %}
    {% endblock %}

    {% block element_moorl_merchant_finder_result_button_location %}
        {# displayMode full is always with map #}
        {% if displayMode == 'full' %}
            {% if merchant.locationLon %}
                <a href="javascript:"
                   data-location-lat="{{ merchant.locationLat }}"
                   data-location-lon="{{ merchant.locationLon }}"
                   data-item="{{ merchant.id }}"
                   class="btn btn-sm btn-light">
                    {% sw_icon 'map-pin' style {size:'sm', pack:'fas'} %}
                    {{ "moorl-merchant-finder.displayOnMap"|trans }}
                </a>
            {% endif %}
        {% endif %}
    {% endblock %}

    {% block element_moorl_merchant_finder_result_button_cms %}
        {% if config('MoorlMerchantFinder.config.detailPage') == 'popup' %}
            <a href="javascript:"
               data-moorl-foundation-modal="{{ seoUrl('moorl.merchant-finder.merchant.modal', {'merchantId': merchant.id}) }}"
               class="btn btn-sm btn-light">{{ "moorl-merchant-finder.more"|trans }}</a>
        {% elseif config('MoorlMerchantFinder.config.detailPage') == 'page' %}
            <a href="{{ merchant.seoUrl }}"
               class="btn btn-sm btn-light">{{ "moorl-merchant-finder.more"|trans }}</a>
        {% endif %}
    {% endblock %}
</div>