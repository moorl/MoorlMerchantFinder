    <sw-card v-if="!isLoading"
             :title="$tc('moorl-foundation.label.stockCard')"
             :isLoading="isLoading"
             class="moorl-entity-grid">
        <moorl-entity-grid entity="moorl_merchant_stock"
                           :isLoading="isLoading"
                           :criteria="merchantStockCriteria"
                           :filterColumns="merchantStockFilterColumns"
