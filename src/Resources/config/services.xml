<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Controller -->
        <service id="Moorl\MerchantFinder\Controller\ApiController" public="true">
            <argument type="service" id="Shopware\Storefront\Page\GenericPageLoader"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="session"/>
        </service>

        <service id="Moorl\MerchantFinder\Controller\StorefrontController" public="true">
            <argument type="service" id="Shopware\Storefront\Page\GenericPageLoader"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="session"/>
        </service>

        <!-- Entity -->
        <service id="Moorl\MerchantFinder\Merchant\MerchantDefinition">
            <tag name="shopware.entity.definition" entity="moorl_merchant" />
        </service>

        <service id="Moorl\MerchantFinder\Merchant\MerchantCategoryDefinition">
            <tag name="shopware.entity.definition" entity="moorl_merchant_category" />
        </service>

        <service id="Moorl\MerchantFinder\Merchant\MerchantTagDefinition">
            <tag name="shopware.entity.definition" entity="moorl_merchant_tag" />
        </service>

        <service id="Moorl\MerchantFinder\Merchant\MerchantProductManufacturerDefinition">
            <tag name="shopware.entity.definition" entity="moorl_merchant_tag" />
        </service>

        <!-- Snippet Files -->
        <service id="Moorl\MerchantFinder\Resources\snippet\de_DE\SnippetFile_de_DE" public="true">
            <tag name="shopware.snippet.file" priority="100"/>
        </service>

        <service id="Moorl\MerchantFinder\Resources\snippet\en_GB\SnippetFile_en_GB" public="true">
            <tag name="shopware.snippet.file" priority="100"/>
        </service>

    </services>

</container>
